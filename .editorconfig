# https://editorconfig.org/
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space

# Задаем форматирование для js, scss, pug фйалов
[*.{js,scss,pug}]
indent_size = 2
trim_trailing_whitespace = true

# Но не переформатируем минифицированные
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
